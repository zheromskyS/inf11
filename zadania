// Урок 2 № 5

uses FormsABC;
var
minbutton: Button; 
maxbutton: Button;
f: FlowBreak;
s: Space;
procedure Maximize();
begin
MainForm.Maximize;
end;
procedure Minimize;
begin
MainForm.Minimize;
end;
begin
  MainForm. Title:='Форма с двумя кнопками';
  MainForm. SetSize (300, 300);
  MainForm. CenterOnScreen;
  f:=new FlowBreak (50);
  s: =new Space (30);
  maxbutton:=new Button ('Maximize form');
  maxbutton.Width:=200;
  maxbutton.Click += Maximize;
  f: =new FlowBreak(50);
  s: =new Space (30);
  minbutton:=new Button ('Minimize form'); 
  minbutton.Width:=200;
  minbutton.Click += Minimize;
end.

