// Урок 2 № 1

uses FormsABC;
begin 
  MainForm.Title:='Пример формы';
  MainForm.SetSize(300, 300);
  MainForm.CenterOnScreen;
end.

// Урок 2 № 2

uses FormsABC;
var 
pushButton: Button;
procedure PrintHello();
begin
  writeln('Hello');
end;
begin 
  MainForm.Title:='Пример формы';
  MainForm.SetSize(300, 300);
  MainForm.CenterOnScreen;
  pushButton:=new Button('Say Hello');
  pushButton.Width:=200;
  pushButton.Click += PrintHello;
end.

// Урок 2 № 3

uses FormsABC;
var 
pushButton: Button;
f: FlowBreak;
s: Space;
procedure PrintHello();
begin
  writeln('Hello');
end;
begin 
  MainForm.Title:='Пример формы';
  MainForm.SetSize(300, 300);
  MainForm.CenterOnScreen;
  f:=new FlowBreak(90);
  s:=new Space(30);
  pushButton:=new Button('Say Hello');
  pushButton.Width:=200;
  pushButton.Click += PrintHello;
end.

